<% content_for :name, @wine.name %>
<article class="wines">
  <header>
    <h2><%= @wine.name %></h2>
  </header>
  <p><label>Country:</label> <%= @wine.country %></p>
  <p><label>Year:</label> <%= @wine.year %></p>
  <p><label>Winery:</label> <%= @wine.winery %></p>
  <p><label>Varietal:</label> <%= @wine.varietal %></p>
  <p>
  Read all
  <%= link_to pluralize(@wine.reviews.size, 'review'), 
                        wine_reviews_path(@wine) %>
</p>
<p><label>Average Review:</label> <%= format_average_rating(@wine) %></p>
</article>

<%= link_to 'All wines', wine_index_path %>
| <%= link_to 'Edit', edit_wine_path(@wine) %>
<%= button_to 'Delete', @wine,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>